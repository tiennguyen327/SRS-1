@page
@model SRS.Pages.Account.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-sm-6">
            <div class="box-header with-border">
                <h3 class="box-title">Edit Account</h3>
            </div>
            <div class="box-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Account.UserName" class="control-label"></label>
                        <input asp-for=" Account.UserName" class="form-control" />
                        <span asp-validation-for="Account.UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Account.Role" class="control-label"></label>
                        <select asp-for=" Account.SelectedRoleId" class="form-control" asp-items="@Model.Roles"></select>
                        <span asp-validation-for="Account.SelectedRoleId"></span>
                    </div>
                </form>
            </div>
            <div class="box-footer clearfix">
                <input type="submit" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-sm btn-secondary">Back</a>
            </div>
        </div>
    </div>
</section>
