@page
@model SRS.Pages.Account.CreateModel
@{
    ViewData["Title"] = "Add Or Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-sm-6">
            <div class="box-header with-border">
                <h3 class="box-title">Create Account</h3>
            </div>
            <div class="box-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Account.Email" class="control-label"></label>
                        <input asp-for=" Account.Email" class="form-control" />
                        <span asp-validation-for="Account.Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Account.Password" class="control-label"></label>
                        <input asp-for=" Account.Password" class="form-control" />
                        <span asp-validation-for="Account.Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Account.ConfirmPassword" class="control-label"></label>
                        <input asp-for=" Account.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Account.ConfirmPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Account.SelectedRoleId" class="control-label"></label>
                        <select asp-for=" Account.SelectedRoleId" class="form-control" asp-items="@Model.Roles"></select>
                        <span asp-validation-for="Account.SelectedRoleId"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="box-footer clearfix">
                <a asp-page="Index" class="btn btn-sm btn-secondary">Back</a>
            </div>
        </div>
    </div>
</section>

